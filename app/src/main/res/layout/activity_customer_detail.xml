<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetailActivity"
    android:orientation="vertical"
    android:background="@drawable/grad_bg">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_customer_detail"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/Aqua"
        >



       </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/White"

        >



        <EditText
            android:layout_marginTop="100dp"
            android:id="@+id/txt_AgentN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AgentName"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/White"

        >



        <EditText
            android:layout_marginTop="100dp"
            android:id="@+id/txt_Collec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Collection"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/White"


        >

        <EditText
            android:id="@+id/txt_dailyAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Daily Amount"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/White"


        >

        <EditText
            android:id="@+id/txt_AvailableB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available Balance"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/White"


        >

        <EditText
            android:id="@+id/txt_Phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:ems="10"
            android:inputType="number"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/White"



        >

        <EditText
            android:id="@+id/txt_collectionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Collection Amount"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:outlineSpotShadowColor="@color/White"

            />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="150dp"
        android:background="@color/White"
        android:textColor="@color/Aqua"/>







</LinearLayout>