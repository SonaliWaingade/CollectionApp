<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/proRellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/pro_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="9dp"
                android:padding="3dp"
                android:src="@drawable/profile"
                />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_bar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/agentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="10sp"
            android:textColor="@color/White"
            android:hint="Name"/>





    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proRellay1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/followersbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users"
                    android:textSize="20sp"
                    android:textColor="@color/White"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/pro_user_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/White"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/followingbg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="20sp"
                    android:textColor="@color/White"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/pro_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="15sp"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:padding="1dp">




                    <TextView
                        android:id="@+id/pro_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="5dp"
                        android:hint="Email ID"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColorHint="@color/Turquoise"
                        android:textColor="@color/Turquoise"
                        android:outlineSpotShadowColor="@color/Turquoise"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="1dp">



                    <TextView
                        android:id="@+id/pro_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="5dp"
                        android:hint="Phone Number"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColorHint="@color/Turquoise"
                        android:textColor="@color/Turquoise"
                        android:outlineSpotShadowColor="@color/Turquoise"
                        />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >




                    <TextView
                        android:id="@+id/pro_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="5dp"
                        android:hint="Address"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColorHint="@color/Turquoise"
                        android:textColor="@color/Turquoise"
                        android:outlineSpotShadowColor="@color/Turquoise"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp">




                    <TextView
                        android:id="@+id/pro_userID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User ID"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColorHint="@color/Turquoise"
                        android:textColor="@color/Turquoise"
                        android:outlineSpotShadowColor="@color/Turquoise"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Save"
                android:textColor="@color/White"
                android:background="@color/followersbg"
                android:layout_gravity="center"/>

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>