<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:title="Enable Night Mode">
        <CheckBoxPreference
            android:title="Night Mode"
            android:key="NIGHT"
            android:defaultValue="false"
            android:summaryOn="Night mode is activated"
            android:summaryOff="Night mode is deactivated"/>

sum    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen Orientation">
        <ListPreference
            android:title="Screen Orientation"
            android:key="ORIENTATION"
            android:defaultValue="false"
            android:entries="@array/items_name"

            android:entryValues="@array/items_value"/>

    </PreferenceCategory>

</PreferenceScreen>