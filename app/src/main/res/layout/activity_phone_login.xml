<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity"
    android:background="@drawable/grad_bg">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="230dp"
        android:textColorHint="@color/White"
        android:padding="8dp"
        android:hint="Phone Number"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
android:background="@drawable/et_bg"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:textColorHint="@color/White"
        android:padding="8dp"
        android:hint="Enter Verification Number"
        android:layout_below="@id/phone_number_input"
        android:background="@drawable/et_bg"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
 android:visibility="invisible"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/send_ver_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Code"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="50dp"
        android:textColor="@color/White"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/verification_code_input"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp" />
    <Button
        android:id="@+id/verify_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/send_ver_code_btn"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:visibility="invisible"/>

</RelativeLayout>